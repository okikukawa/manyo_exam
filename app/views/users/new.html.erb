<h1>Sign up</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>"<%= @user.name %>"は保存されませんでした。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>
  <div class="">
    <%= f.label :email %>
    <br>
    <%= f.email_field :email %>
  </div>
  <div class="">
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
  </div>
  <div class="">
    <%= f.label :password_confirmation %>
    <br>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Create my account" %>
<% end %>
