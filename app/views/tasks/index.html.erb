<h1>タスク一覧</h1>
<p><%= notice %></p>
<%= form_with(model: @task, url: tasks_path, method: :get,local: true) do|f| %>
  <%= f.label :title, "タスク名" %>
  <%= f.text_field :title, placeholder:"タスク名を入力", id:"search_textarea" %>
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, Task.task_statuses.keys, include_blank:"-" %>
  <%= f.submit "検索" %>
<% end %>
<p><%= @task.count %>件のタスクが表示されています</p>
<table>
  <tr>
    <th>タスク</th>
    <th>詳細</th>
    <th>ステータス</th>
    <th><%= link_to '終了期限 ▼',tasks_path(sort_expired: "true") %></th>
    <th><%= link_to '優先度 ▼',tasks_path(sort_priority: "true") %></th>
  </tr>
  <% @task.each do|task| %>
  <tr>
    <td class="task_row"><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.status %></td>
    <td><%= task.deadline %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細',task_path(task.id) %></td>
    <td><%= link_to '編集',edit_task_path(task.id) %></td>
    <td><%= link_to '削除',task_path(task.id), method: :delete, data:{ confirm: "削除してもよろしいですか？"} %></td>
  </tr>
  <% end %>
</table>
<p><%= link_to 'タスクを新しく登録する',new_task_path %></p>
<%= link_to 'TOP',tasks_path %>
<%= paginate @task %>
