<% if @task.errors.any? %>
  <h2><%= @task.errors.count %>件のエラーがあります。</h2>
  <% @task.errors.full_messages.each do|msg| %>
    <%= msg %>
  <% end %>
<% end %>
<%= form_with(model:@task,local:true)do|f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <%= f.submit "登録する" %>
<% end %>
