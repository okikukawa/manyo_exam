<div class="container">
  <h3>タスク詳細</h3>
  <p>タスク：<%= @task.title %></p>
  <p>タスク詳細：<%= @task.content %></p>
  <p>終了期限：<%= @task.deadline %></p>
  <p>ステータス：<%= @task.status %></p>
  <p>優先度：<%= @task.priority %></p>
  <p>ラベル：
    <% @task.labels.each do|label| %>
      <%= label.name %>
    <% end %></p>
  <%= link_to '編集', edit_task_path(@task.id) %>
  <label>|</label>
  <%= link_to '戻る', tasks_path %>
</div>
